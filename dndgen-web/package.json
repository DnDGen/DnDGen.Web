{
  "name": "dndgen-web",
  "version": "2.5.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration development",
    "build:ci": "ng build --configuration production",
    "test": "ng test --watch=false",
    "test:ci": "ng test --watch=false --karma-config karma.conf.ci.js",
    "test:cd:rollgen": "ng test --watch=false --karma-config karma.conf.ci.js --include='**/app/roll/**/*.spec.ts'",
    "test:cd:treasuregen": "ng test --watch=false --karma-config karma.conf.ci.js --include='**/app/treasure/**/*.spec.ts'",
    "test:cd:charactergen": "ng test --watch=false --karma-config karma.conf.ci.js --include='**/app/character/**/*.spec.ts'",
    "test:cd:encountergen": "ng test --watch=false --karma-config karma.conf.ci.js --include='**/app/encounter/**/*.spec.ts'",
    "test:cd:dungeongen": "ng test --watch=false --karma-config karma.conf.ci.js --include='**/app/dungeon/**/*.spec.ts'",
    "test:cd:web": "ng test --watch=false --karma-config karma.conf.ci.js --include='**/app/{roll,treasure,character,encounter,dungeon}/**/*.spec.ts'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/common": "^20.3.14",
    "@angular/compiler": "^20.1.7",
    "@angular/core": "^20.1.7",
    "@angular/forms": "^20.1.7",
    "@angular/platform-browser": "^20.1.7",
    "@angular/router": "^20.1.7",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.0.0",
    "bootstrap-icons": "^1.0.0",
    "rxjs": "^7.8.2",
    "zone.js": "^0.15.1",
    "sweetalert2": "^11.22.4",
    "file-saver": "^2.0.5",
    "@types/file-saver": "^2.0.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.7",
    "@angular/localize": "^20.1.7",
    "@types/jasmine": "^5.1.9",
    "karma": "^6.4.4",
    "karma-firefox-launcher": "^2.1.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-junit-reporter": "^2.0.1",
    "typescript": "~5.8.2"
  }
}